<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible"  content="IE=edge">
        <meta name="viewport" content="with=device-width, initial-scale=1.0">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">
        <style>
            body{
                background-color:#0D1137;
            }
            #container{
                width:100%;
                height:50%;
            
               
            }
            #create{
                width:30px;
                height:30px;
                border-radius:10px;
                background-color:white;
                float:left;
                margin-left:21%;
            }
            #create p{
                text-align: center;
                color:#03874F;
                font-size:200%;
                margin-top:-10px;

            }
	    a{

		text-decoration-line:none;
	    }
            #googleChat{
                text-align: center;
                margin-top:10%;
            }
            h1 span:nth-child(1){
                color:white;
                display:inline-block;
                font-size:200%;
                margin-right:40px;
                font-weight: 500;
            }
            h1 span:nth-child(2){
                color:#03874F;
                font-size:200%;
                font-weight: 500;
                
            }
            #search{
                width: 700px;
                height:30px;
                background-color:white;
                border-radius:100px;
                text-align: center;
                color:#544D4D;
                margin:auto;
                margin-bottom:20px;
            }
	    #submit{
		    width:50px;
		    height:30px;
		    border-radius:100px;
		    border-color:white;
		    background-color:white;
		    color: black;
		    margin-left:-55px;
	    }
            #chatRooms{
                width:1000px;
                height:350px;
                margin:auto;
                overflow-y:scroll;
            }
            #chatRooms::-webkit-scrollbar{
                width:13px;
                background-color:white;
                border-radius:100px;
                
            }
            #chatRooms::-webkit-scrollbar-thumb{
                background:#FFF73D;
                border-radius:10px;
                min-height: 50px;
                
            }
            #chatRoom{
                width:700px;
                height:70px;
                background-color:white;
                border-radius:100px;
                margin:auto;
		margin-top:10px;
                
            }
       
            #title p{
                text-align: center;
                font-size: 150%;
                margin-top:0px;
            }
            #description{
                text-align:center;
                font-size:120%;
                margin-top:-10px;  
                color: #544D4D;  
            }
        </style>
    </head>
    <body>
        <div id="container">
            <div id="googleChat">
                <h1> <span>GOOGLE</span><span>CHAT LIST</span></h1>
            </div>
            <div id="create">
                <a href="/create"><p>+</p></a>
            </div>
	    <form action ="/search" method="POST">
		    <label for="search">search</label>
		    <input type="text" id="search" name="search"> 
		    <input type="submit" id="submit" value="send">
	    </form>
            <div id="chatRooms">
		<% chatrooms.forEach(chatroom => {%>
		<a href= "<%= `/chat/${chatroom.id}` %>">
                <div id="chatRoom">
		    <div id="title"><p><%=chatroom.roomName%></p></div>
                    <div id="description"><p><%=chatroom.description%></p></div>
		</a>
		<% }); %>
	    </div>                
       </div>
    </body>
</html>

