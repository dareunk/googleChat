<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible"  content="IE=edge">
        <meta name="viewport" content="with=device-width, initial-scale=1.0">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">
        <style>
            body{
                background-color:#0D1137;
                width:100%;
                height:100%;
            }
            #container{
                width:100%;
                height:60%;
                margin-left:33%;
                margin-top:10%;
              
            }
            #chat{
                width:500px;
                height:500px;
                background-color:white;
                border-radius:30px;
		padding-top:10px;
                overflow-y:overlay;
                scroll-margin-left:100px;
            }
            #chat::-webkit-scrollbar{
       
                width:15px;
                background-color:white;
                border-radius:100px;
                height:5px;
                display:none;
            }

            #chat::-webkit-scrollbar-thumb{
                background:#FFF73D;
                border-radius:10px;
                min-height: 50px;
                background-clip: padding-box;
                border: 1px solid transparent;
               
            }
            }
            #chat::-webkit-scrollbar-track{
                background-color: #00ff0000;
           
        
            }
            #chatBox {
             
                width:auto;
		max-width:300px;
                height:auto;
                border-radius:20px;
                display: relative;
		position: relative;
            }
	    .myself{
		    background-color:#FFF73D;
		    margin-left:140px;
		    margin-top:10px;

	    }
	    .other{
		    background-color:#D8D8D8;
		    margin-left:40px;
		    margin-top:0px;
            }
	    .myself:after{
		    content:"";
		    position:absolute;
		    top:5%;  
		    border-left:20px solid #FFF73D;
		    border-top:10px solid transparent;
		    border-bottom:10px solid transparent;
		    right:-13px;
	    }
	    .other:after{
		    content:"";
		    position:absolute;
		    top:5%;
		    border-right:20px solid #D8D8D8;
		    border-top:10px solid transparent;
		    border-bottom: 10px solid transparent;
		    left:-13px;
	    }
			        
	    #chatContents{
	    	display:absolute;
		width:290px;
		padding-top:5px;
		padding-bottom:5px;
		padding-left:10px;
	
	    }
            #chatBox p{
                display:absolute;
                margin-top:10px;
                margin-bottom:10px;
            }
	    #popWho{
	    	
		height:auto;
		color:#03874F;
		text-align:center;
	    }
            #content{
               text-align: left;
               font-size:150%;
               margin-left:10%;
               display:inline-block;
            }
            #textUser{
              margin-left:60%;
              display:inline-block;
            }
            #chatForm{
               margin-top:20px;
               margin-left:5%;
            }
            input{
                width:300px;
                height:30px;
                border:none;
                background-color:#D8D8D8;
                border-radius:30px;
            }
            button{
                width:50px;
                height:30px;
                border:none;
                background-color:#FFF73D;
                border-radius:30px;
               
            }
	    #who{ 
		   margin-bottom:0px;
		   margin-left:40px;
		   padding:0px;
		   color: #635C5C;
		   margin-top:5px;
	    }
	    
        </style>
	
	<script>
		/*
		var changeColor = function () {
		let current = $("#userEmail").val();
		let who = $("#userFromDB").val();
		if(current == who){
			$("#chatBox").attr("class", "myself");
		}
		}
		*/
	</script>
    </head>
    <body>
        <div id="container">
	    <input type="hidden" name="userEmail" id="userEmail" value="<%= currentUser.email %>">
	    <input type="hidden" name="userName" id="userName" value="<%= currentUser.displayName %>">
	    <input type="hidden" name="roomId" id="roomId" value="<%= chatroomid %>">
	    
	    <div id="chat">
		    <% if(chatcontents) {%>
		   <% chatcontents.forEach(chatcontent => { %>

		   <% if(chatcontent.userEmail ===  currentUser.email ) {%> 
		   <div id="chatBox" class= "myself">
			   <div id ="chatContents">
				  <%= chatcontent.content %>
			   </div>
		   </div>
		   <% } else { %>
	   	    <div>   
		   <div id="who">
			           <p id = "userFromDB" value="<%= chatcontent.userEmail%>" ><%= chatcontent.userEmail %></p>

		       </div>
		   <div id="chatBox" class="other">
			   <div id="chatContents">
				   <%= chatcontent.content %>
			   </div>
		   </div>
		   </div>
		   <% } %>
		    <% })}; %>
	    </div>
                <div id="chatForm">
		   
                    <form action="" method="POST">
                        <input type="text" id="inputChat" name="inputChat" autofocus>
                        <button type="button" id="sendChat" name="sendChat" >send</button>
                    </form>
                </div>
        </div>
	<script src="/socket.io/socket.io.js"></script>
	<script src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script>
		$(() => {
			const socket = io();
			socket.on("connect", () => {
				let userEmail = $("#userEmail").val();
				let userName = $("#userName").val();
				socket.emit("newUser",userEmail, userName);
			});
			socket.on("pop", (msg) => {
				$("#chat").prepend(`<div id="popWho">${msg}</div>`);
			});
			$("#sendChat").click(()=>{
				let content = $("#inputChat").val();
				let roomId = $("#roomId").val();
				//$("#chatBox").addClass("myself")
				$("#chat").prepend(`<div id="chatBox"><div id="chatContents">${content}</div></div>`);
				$("#chatBox").addClass("myself");
				$("#inputChat").val("");
				socket.emit("message", content, roomId);
				return false;
			});
			socket.on("update", (msg,userEmail) => {
				
				$("#chat").prepend(`<div id="chatBox"><div id="chatContents">${msg}</div></div>`);
				$("#chatBox").addClass("other");	
				$("#chat").prepend(`<div id="who">${userEmail}</div>`);
			});
			
		});
	</script>

	</script>
    </body>
</html>
